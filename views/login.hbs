<div class="container" style="max-width: 700px">
    <div class="row">
        <div class="col-lg-12">
            {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
            {{/if}}

            {{#if error_msg}}
                <div class="alert alert-danger">{{error_msg}}</div>
            {{/if}}

            {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
            {{/if}}
            <h2 class="m-3">Log In</h2>
            <form method="POST" action="/users/login" class="p-3">
                <div class="form-group">
                    <label for="exampleInputEmail1">User Name</label>
                    <input type="text" class="form-control" name="username" aria-describedby="emailHelp" placeholder="johndoe187">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary justify-content-center">Submit</button><br>
            </form>
            <div class=" col-lg-12 justify-content-center">
                <p>Not Having an Account ?<a class="text-primary p-2" href="/users/register" data-toggle="tooltip" data-placement="top" title="Make New Account ?">Register</a></p>
            </div>
        </div>
    </div>
</div>